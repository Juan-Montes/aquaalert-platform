# .env.example
# ─────────────────────────────────────────────────────
# AquaAlert Platform — Variables de entorno
# Copia este archivo como .env y completa tus valores
# NUNCA subas el .env real a git
# ─────────────────────────────────────────────────────

# ─── PostgreSQL (ChirpStack) ──────────────────────────
POSTGRES_USER=chirpstack
POSTGRES_PASSWORD=CAMBIA_ESTO_chirpstack_pass
POSTGRES_DB=chirpstack

# ─── TimescaleDB (datos de sensores) ─────────────────
TIMESCALE_USER=aquaalert
TIMESCALE_PASSWORD=CAMBIA_ESTO_timescale_pass
TIMESCALE_DB=aquaalert_ts

# ─── Redis ────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ─── API ──────────────────────────────────────────────
SECRET_KEY=CAMBIA_ESTO_genera_con_openssl_rand_hex_32
API_DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ─── MQTT ─────────────────────────────────────────────
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=

# ─── Telegram Bot (alertas) ───────────────────────────
TELEGRAM_BOT_TOKEN=CAMBIA_ESTO_token_de_tu_bot
TELEGRAM_CHAT_ID=CAMBIA_ESTO_id_de_tu_grupo_o_canal

# ─── Grafana ──────────────────────────────────────────
GRAFANA_PASSWORD=CAMBIA_ESTO_grafana_admin_pass

# ─── ChirpStack ───────────────────────────────────────
CHIRPSTACK_API_TOKEN=CAMBIA_ESTO_generar_desde_ui

# ─── Simulador de nodo ────────────────────────────────
SIM_DEVICE_EUI=a840411d3181bd6b
SIM_APP_EUI=0000000000000001
SIM_INTERVAL=30

# ─── Producción (solo en servidor) ───────────────────
VPS_HOST=
VPS_USER=
DOMAIN=
